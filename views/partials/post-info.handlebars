<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        {{!-- <span>({{post.post_url}})</span> --}}
        <div class = "byline">
         by {{user.username}} on
        {{post.created_at}}
        </div>
    </div>
    <div class="content">
        {{content}}
    </div>
    <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>